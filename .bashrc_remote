# setup for aliphysics development
export ALICE="$HOME/alice"
export ALICE_ANALYSIS="$HOME/Analysis"
export GRID_UTILITY_SCRIPTS="$HOME/GridUtilityScripts"
alias ali="pushd $ALICE && alienv enter AliPhysics/latest --shellrc && popd"

# setup for grid utility scripts
[ -d "$HOME/GridUtilityScripts" ] && source $HOME/GridUtilityScripts/SetupEnv.sh &>/dev/null

# setup for o2 development
export O2="$HOME/o2"
alias o2="pushd $O2 && alienv enter O2Physics/latest --shellrc && popd"

# activate root
# source $HOME/root/bin/thisroot.sh
